<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="gripper" params="prefix parent *origin">
    <joint name="${prefix}gripper_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}gripper_base"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <link name="${prefix}gripper_base">
        <visual>
            <geometry>
                <box size="0.05 0.1 0.05"/>
            </geometry>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.05 0.1 0.05"/>
            </geometry>
        </collision>
    </link>

    <!-- Gripper Fingers -->
    <xacro:macro name="finger" params="side y_pos">
        <joint name="${prefix}finger_${side}_joint" type="prismatic">
            <parent link="${prefix}gripper_base"/>
            <child link="${prefix}finger_${side}_link"/>
            <origin xyz="0 ${y_pos} 0" rpy="0 0 0"/>
            <axis xyz="0 1 0"/>
            <limit lower="0.0" upper="0.04" effort="10" velocity="0.1"/>
        </joint>

        <link name="${prefix}finger_${side}_link">
            <visual>
                <geometry>
                    <box size="0.08 0.01 0.02"/>
                </geometry>
                <origin xyz="0.04 0 0"/>
                <material name="black"/>
            </visual>
            <collision>
                <geometry>
                    <box size="0.08 0.01 0.02"/>
                </geometry>
                 <origin xyz="0.04 0 0"/>
            </collision>
        </link>
    </xacro:macro>

    <xacro:finger side="left" y_pos="0.05"/>
    <xacro:finger side="right" y_pos="-0.05"/>
  </xacro:macro>
</robot>